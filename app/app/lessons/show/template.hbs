<div class="layout-row layout-xs-column">
  <div class="flex-100">
    {{#link-to "app.lessons.index"}}
      {{#paper-button raised=true primary=true}}
        View all lessons
      {{/paper-button}}
    {{/link-to}}
  </div>
</div>

<div class="layout-row layout-xs-column">
  <div class="flex-gt-md-25">
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}
            Week {{model.week}} - Lesson {{model.day}}
          {{/text.headline}}
          {{model.date}}
        {{/title.text}}
      {{/card.title}}
    {{/paper-card}}

    {{#paper-card as |card|}}
      {{#liquid-unless hideGif}}{{card.image src=model.image}}{{/liquid-unless}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}
            Daily Inspiration
          {{/text.headline}}
        {{/title.text}}
      {{/card.title}}

      {{#card.content}}
        <blockquote>{{model.quote}}</blockquote>
      {{/card.content}}

      {{#card.actions}}
        {{#paper-button onClick=(action toggleProperty "hideGif")}}Hide GIF{{/paper-button}}
      {{/card.actions}}
    {{/paper-card}}
  </div>

  <div class="flex-gt-md-50">
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}Lesson Plan{{/text.headline}}
        {{/title.text}}
      {{/card.title}}

      {{#card.content}}
        {{#paper-list}}
          {{#paper-item class="md-2-line"}}
            <div class="md-list-item-text lesson-block">
              <h3>Estimated Time</h3>
              <h3>Item</h3>
            </div>
          {{/paper-item}}
          {{paper-divider}}

          {{#sortable-group onChange=(action reorderBlocks) as |group|}}
            {{#each (sort-by "order" model.blocks) as |block|}}
              {{#sortable-item model=block group=group handle=".handle"}}
                <md-list-item class="md-2-line">
                  <div class="md-no-style md-list-item-inner md-ink-ripple">
                    <div class="md-list-item-text lesson-block">
                      <h3>{{block.estimatedTime}}</h3>
                      <h3>{{block.title}}</h3>
                      <span class="handle">&varr;</span>
                    </div>
                  </div>
                </md-list-item>
                {{paper-divider}}
              {{/sortable-item}}
            {{/each}}
          {{/sortable-group}}

          {{new-block onsubmit=(action addBlock model)}}
        {{/paper-list}}
      {{/card.content}}
    {{/paper-card}}
  </div>

  <div class="flex-gt-md-25">
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline class="lesson-current-time"}}
            <span>Current Time</span>
            <span class="timer">{{liquid-bind hours}}:{{liquid-bind minutes}} {{amPm}}</span>
          {{/text.headline}}
        {{/title.text}}
      {{/card.title}}
    {{/paper-card}}
  </div>
</div>
